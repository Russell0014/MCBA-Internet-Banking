@model MCBA.ViewModel.ProfileViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<h1 class="text-center">Edit Profile</h1>
<p class="text-center text-muted mb-4">Update your personal details below.</p>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-7">
            <div class="card shadow-sm">
                <form asp-action="Edit" method="post" class="card p-4">
                    <input type="hidden" asp-for="CustomerId"/>
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="TFN" class="form-label"></label>
                        <input asp-for="TFN" class="form-control"/>
                        <span asp-validation-for="TFN" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Address" class="form-label"></label>
                        <input asp-for="Address" class="form-control"/>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="City" class="form-label"></label>
                        <input asp-for="City" class="form-control"/>
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="State" class="form-label"></label>
                        <input asp-for="State" class="form-control"/>
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="PostCode" class="form-label"></label>
                        <input asp-for="PostCode" class="form-control"/>
                        <span asp-validation-for="PostCode" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Mobile" class="form-label"></label>
                        <input asp-for="Mobile" class="form-control"/>
                        <span asp-validation-for="Mobile" class="text-danger"></span>
                    </div>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-success">Save</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

